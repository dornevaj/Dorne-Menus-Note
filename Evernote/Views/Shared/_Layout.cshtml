<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- CSS -->
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/shop-homepage.css" rel="stylesheet" />
    <link href="~/Content/Layout.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    
    <!--script-->
    <script src="~/scripts/jquery-3.3.1.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/evernotejs/layout.js"></script>

</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="~/Home/Index"><img src="~/Dist/img/sigma - 32.png" /> Meliorism Note</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarResponsive">

                <ul class="navbar-nav ">
                    <li class="nav-item active">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Manage
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Users</a>
                                <a class="dropdown-item" href="~/Category/Index/">Categories</a>
                                <a class="dropdown-item" href="~/Note/Index">Notes</a>
                                <a class="dropdown-item" href="#">FilterLog</a>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="~/Home/TopRatedNotes">Top Rated</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Home/LatestNotes">Latest</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Home/MostCommented">Most Commented</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Home/About">About</a></li>

                </ul>

                <ul class="navbar-nav ml-auto">                  
                   <li class="nav-item"><a class="nav-link" href="~/Home/CheckError"><span class="fa fa-user-circle-o"></span>  </a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Account/LogOut"><span class="fa fa-sign-out"></span> Sign-out</a></li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        <div class="row">
            <div class="col-lg-12">
                @RenderBody()
            </div>
        </div>
              
            </div>

            <!-- Footer -->
            <div class="container">
                <hr />
                <div class="row">
                    <div class="col-sm" id="dvFooterMenu">
                        <a class="nav-link" href="#" data-toggle="tooltip" data-placement="top" title="Go To Administration Page!"><span class="fa fa-adn" style="color:red" data-tool="deneme"></span> Administration</a>
                        <a class="nav-link" href="~/Home/TopRatedNotes" data-toggle="tooltip" data-placement="top" title="Go To Top Rated Page!"><span class="fa fa-star" style="color:yellowgreen"></span> Top Rated</a>
                        <a class="nav-link" href="~/Home/LatestNotes" data-toggle="tooltip" data-placement="top" title="Go To Latest Page!"><span class="fa fa-bolt" style="color:lightskyblue"></span> Latest</a>
                        <a class="nav-link" href="~/Home/MostCommented" data-toggle="tooltip" data-placement="top" title="Go To Latest Page!"><span class="fa fa-comment-o" style="color:lightskyblue"></span> Most Commented</a>
                        <a class="nav-link" href="~/Home/About" data-toggle="tooltip" data-placement="top" title="Go To About Page!"><span class="fa fa-info" style="color:lightseagreen"></span> About</a>
                    </div>
                    <div class="col-sm" id="dvFooterSocialMediaIcons">
                        <div class="row">
                            <div class="col col-lg-3 col-sm-3">
                                <a href="https://twitter.com" target="_blank"> <img src="~/Dist/icons/Social Media/twitter.png" /> </a>
                            </div>
                            <div class="col col-lg-3 col-sm-3">
                                <a href="https://medium.com" target="_blank"> <img src="~/Dist/icons/Social Media/medium.png" /> </a>
                            </div>
                            <div class="col col-lg-3 col-sm-3">
                                <a href="https://www.linkedin.com" target="_blank"> <img src="~/Dist/icons/Social Media/linkedin.png" /> </a>
                            </div>
                            <div class="col col-lg-3 col-sm-3">
                                <a href="https://www.quora.com" target="_blank">  <img src="~/Dist/icons/Social Media/quora.png" /> </a>
                            </div>

                        </div>
                    </div>
                    <div class="col-sm" id="dvFooterEmailSubscribe">
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="Enter Your E-mail" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-outline-info" type="button"><span class="fa fa-send"></span> Subscribe</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer>
                <p class="m-0 text-center">Copyright &copy; @DateTime.Now.Year - Evernote</p>
            </footer>
</body>
</html>